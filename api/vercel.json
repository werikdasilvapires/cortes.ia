{
  "version": 2,
  "builds": [
    { "src": "api/handler.py", "use": "@vercel/python" },
    { "src": "public/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/upload$", "dest": "api/handler.py" },
    { "src": "^/process$", "dest": "api/handler.py" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
