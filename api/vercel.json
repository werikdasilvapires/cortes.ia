{
  "version": 2,
  "builds": [
    {
      "src": "api/handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "public/script.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.html" },
    { "src": "/upload", "dest": "api/handler.py" },
    { "src": "/process", "dest": "api/handler.py" }
  ]
}